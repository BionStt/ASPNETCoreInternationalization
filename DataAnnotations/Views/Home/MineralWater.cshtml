@{ ViewData["Title"] = "Mineral Water"; }
<!-- Page Content -->
<div class="container">

    <!-- Page Heading/Breadcrumbs -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewData["Title"]
            </h1>
            <ol class="breadcrumb">
                <li><a asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="active">@ViewData["Title"]</li>
            </ol>
        </div>
    </div>
    <!-- /.row -->

    <!-- Page Content -->
    <div class="container">

        <!-- Image Header -->
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="../images/Mineral-water-information.png" alt="">
            </div>
        </div>
        <!-- /.row -->
        <br>
        <!-- Image Header -->
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="../images/mineral-water-product-line_featured-1.jpg" alt="">
            </div>
        </div>
        <!-- /.row -->
        <br>

        <div class="row">
            <div class="col-md-7">
                <img class="img-responsive" src="../images/Drinking-water-at-sunset_100070651.jpg" alt="">
            </div>
            <div class="col-md-5">
                <p>H+ Sport Mineral Water starts with the purest, cleanest artesian mineral water from natural springs in North
                    America. From there, we add our patented H+ Sport Multi-Vitamin Powder, and natural fruit extract, to
                    give our Mineral Water its signature flavor.</p>

                <p>With H+ Sport Mineral Water you'll get:</p>

                <p>NO artificial flavors, colors, or preservatives </p>
                <p>NO sugar </p>
                <p>NO salt </p>
                <p>NO soy </p>
                <p>NO dairy </p>
                <p>NO gluten </p>
                <p>NO yeast</p>
            </div>
        </div>
        <br>
        <!-- Image Header -->
        <div class="row">
            <div class="col-lg-12">
                <img class="img-responsive" src="../images/h-sport-blueberry.png" alt="">
